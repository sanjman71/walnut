!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", 'xml:lang' => "en", :lang => "en"}
  %head
    %meta{'http-equiv' => "content-type", :content => "text/html;charset=UTF-8"}
    %title= yield(:title).to_s + " | Walnut Places"
    -# default robots content is 'nofollow, noindex'
    -#%meta{:name => 'robots', :content => @robots ? @robots : 'noindex,nofollow'}
    = stylesheet_link_tag "/jqtouch/jqtouch.min.css", "/jqtouch/themes/jqt/theme.min.css", "/jqtouch/mobile.css"
    = yield :stylesheet
    = javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery?
    = javascript_include_tag "/jqtouch/jquery.1.3.2.min.js", "/jqtouch/jqtouch.min.js", "/jqtouch/mobile.js"
    = yield :javascript
    = yield :head

  %body
    = yield
