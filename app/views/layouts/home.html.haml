!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", 'xml:lang' => "en", :lang => "en"}
  %head
    %meta{'http-equiv' => "content-type", :content => "text/html;charset=UTF-8"}
    %title
      = yield :title
      == | Walnut Places
    %meta{:name => 'robots', :content => 'nofollow, noindex'}
    = stylesheet_link_tag 'blueprint/screen', 'walnut', 'errors', 'orange'
    = yield :stylesheet
    = javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery?
    = javascript_include_tag 'jquery', 'jquery.selectboxes', 'application'
    = yield :javascript
    
  %body
    #header
      .container
        .span-24.last#search_places
          = render(:partial => 'shared/search_bar_places')
        .span-24.last{:style => 'text-align: right;'}
          = link_to 'Find Places', root_path, :style => 'color: #FFFFFF;'
          == &nbsp;|&nbsp;
          = link_to 'Chain Stores', chains_path, :style => 'color: #FFFFFF;'
          == &nbsp;|&nbsp;
          = link_to 'Zip Code Finder', url_for(:controller => 'zips', :action => 'index'), :style => 'color: #FFFFFF;'
          
    - if RAILS_ENV == 'development'
      .container.showgrid
        = yield
    - else
      .container
        = yield
