!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", 'xml:lang' => "en", :lang => "en"}
  %head
    %meta{'http-equiv' => "content-type", :content => "text/html;charset=UTF-8"}
    %title
      = yield :title
      == | Walnut Places
    -# default robots content is 'nofollow, noindex'
    %meta{:name => 'robots', :content => @robots ? @robots : 'nofollow, noindex'}
    = stylesheet_link_tag 'blueprint/screen', 'walnut', 'errors', 'orange'
    = yield :stylesheet
    = javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery?
    = javascript_include_tag 'jquery', 'jquery.selectboxes', 'application'
    = yield :javascript
    = yield :head
    
  %body
    #header
      .container
        = render(:partial => "shared/header_links")

    -# main container
    .container{:class => $BlueprintGrid ? 'showgrid' : ''}
      .prepend-1.span-14
        = display_flash
      = yield

    -# google analytics
    = render(:partial => "shared/google_analytics")
