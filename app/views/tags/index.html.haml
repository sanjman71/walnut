- title(@title)
- javascript('tags')

.span-23.mat.prepend-1.last.padding-top-10.padding-bottom-10
  .span-12
    = label_tag "live_search_for_tags", "Find a tag by typing its name", :class => 'big'
    %br
    = text_field("tag", "name", :autocomplete => "off", :id => 'live_search_for_tags', :class => 'title big', :url => tags_path)
    %span#search_progress.hide{:style => 'padding-left: 5px;'}= image_tag 'dots.gif'
    
.prepend-1.span-14#flash
  = display_flash(:notice)

%hr.space

.span-23.prepend-1#pagination{:style => 'color: #555555;'}
  = render(:partial => 'pagination', :locals => {:tags => @tags})

%hr.space

.span-24#tags
  = render(:partial => 'tags', :locals => {:tags => @tags})
        