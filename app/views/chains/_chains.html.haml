- max_count   = chains.max{ |a,b| a.places_count <=> b.places_count}.places_count
- tag_classes = ['one', 'two', 'three']

- chains.each do |chain|
  - klass     = nil #tag_cloud_class(chain, :places_count, max_count, tag_classes)
  - klasses   = ["chain"].push(cycle('even', 'odd')).push(klass)
  %span.small{:style => "white-space: nowrap; margin-right: 3px; font-weight: bold;"}= link_to chain.name, url_for(:action => 'country', :country => @country, :name => chain.id), :class => klasses.join(" ")
