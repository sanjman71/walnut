- columns       = 3
- per_column    = (chains.size / columns) + ((chains.size % columns == 0) ? 0 : 1)
- icolumn       = 0
- icolumn_last  = columns - 1

- columns.times do
  .span-8#column{:class => icolumn == icolumn_last ? 'last' : ''}
    %ul.chain.city.small{:style => 'list-style: none;'}
      - (chains.slice(icolumn*per_column, per_column) || []).each do |chain|
        %li= link_to chain.display_name, chain_country_path(@country, chain), :class => 'admin'
  - icolumn += 1


