- title(@title)

.span-23.prepend-1.mat.padding-top-10.padding-bottom-10
  %h1{:style => 'font-size: 2.0em;'}= @h1
  %h4#breadcrumbs
    = render(:partial => 'shared/breadcrumbs', :locals => {:country => @country, :state => @state, :city => @city})

%hr.space{:style => 'padding-bottom: 20px;'}

.span-5#sidebar
  -# show another google ad
  = google_ad(160, 600)

.span-19.last
  -# render chain places as regular search results
  = render(:partial => 'places/places', :locals => {:locations => @locations, :what => @chain.name, :tags => []})
