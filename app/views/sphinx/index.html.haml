- title("Sphinx")

.span-23.prepend-1.mat.padding-top-10.bottom
  %h2== Sphinx Indexes
  
%hr.space

.prepend-1.span-14#flash
  = display_flash(:notice)

- @objects.each do |object|
  .span-15.last.padding-top-10.padding-bottom-10{:class => cycle("shaded", "")}
    .span-5.prepend-1
      %span{:style => 'font-size: 1.7em;'}= object[:model]
    .span-6.padding-top-5{:style => 'font-weight: bold;'}
      = object[:updated_at].to_s(:appt_day_date_time)
      %br
      %em{:style => 'color: #660099;'}
        = distance_of_time_in_words_to_now(object[:updated_at])
        == ago
    .span-2.prepend-1.last.padding-top-5
      = link_to 'Re-index', sphinx_reindex_path(object[:index]), :class => 'event location'
