- title(@title)

.span-20.box.prepend-1.last
  %h2= @h1
  %h5= link_to("#{pluralize(@neighborhood.locations_count, 'location')}", url_for(:action => 'index', :tag => 'anything'), :class => 'locality search')
  %h4#breadcrumbs
    = render(:partial => 'shared/breadcrumbs', :locals => {:country => @country, :state => @state, :city => @city, :neighborhood => @neighborhood})
  
%h3.span-20.prepend-1#tags
  - unless @popular_tags.blank?
    = render(:partial => 'search/tag_cloud', :locals => {:tags => @popular_tags, :locality_type => 'neighborhood', :locality_params => {:country => @country, :state => @state, :city => @city, :neighborhood => @neighborhood}})
