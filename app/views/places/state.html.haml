- title(@title)

.span-20.box.prepend-1.last
  %h2== #{@state.name} State Page
  %h4#breadcrumbs
    = render(:partial => 'shared/breadcrumbs', :locals => {:country => @country, :state => @state, :city => @city, :zip => nil})
  
%h3.span-20.prepend-1
  %p== #{@state.name} Cities
  - @cities.each_with_index do |city, i|
    - klasses = i.odd? ? ["locality", "odd",] : ["locality", "even"]
    %span[city]{:style => 'line-height: 1.5em; padding-right: 3px; white-space: nowrap;'}= link_to(city, url_for(:controller => 'places', :action => 'city', :country => @country, :state => @state, :city => city), :class => klasses.join(" "))

%h3.span-20.prepend-1
  %p== #{@state.name} Zip Codes
  - @zips.each do |zip|
    %span[zip]{:style => 'line-height: 1.5em;'}= link_to zip, url_for(:controller => 'places', :action => 'zip', :country => @country, :state => @state, :zip => zip)
