- title(@title)

.span-20.box.prepend-1.last
  %h2== #{@state.name} #{@zip.name} Directory
  %h4.span-7.last#breadcrumbs
    = render(:partial => 'shared/breadcrumbs', :locals => {:country => @country, :state => @state, :zip => @zip})
  
%h3.span-20.prepend-1
  = render(:partial => 'places/popular_tags', :locals => {:tags => @tags, :locality_type => 'zip', :locality_params => {:country => @country, :state => @state, :zip => @zip}})
    
%h3.span-20.prepend-1#cities
  %p== #{@zip.name} Cities
  - @cities.each do |city|
    %span[city]= link_to city, url_for(:controller => 'places', :action => 'city', :country => @country, :state => @state, :city => city)
