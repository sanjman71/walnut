- form_for(Place.new, :url => url_for(:controller => 'search', :action => 'resolve'), :method => :post, :html => {:id => 'search_objects_form'}) do |f|
  .span-9.highlight{:style => 'background-color: #fff; height: 35px;'}
    -#= label_tag "what", "What", :class => 'big', :style => 'padding-right: 5px;'
    %span.text
      = text_field_tag "search_what", current_search_query, :id => 'search_what', :name => 'what', :class => 'title', :style => 'width: 309px; font-size: 17px; height: 25px; border: none; margin: 0;', :title => 'What? e.g. pizza, soccer'
    %span.clear.hide{:style => 'display: block; position: relative; left: 322px; top: -28px; width: 25px;'}
      = image_tag("Delete.png")
  .span-9{:style => 'background-color: #fff; height: 35px;'}
    -#= label_tag "search_where", "Where", :class => 'big', :style => 'padding-right: 5px;'
    %span.text
      = text_field_tag "where", current_search_locality, :id => 'search_where', :name => 'where', :class => 'title', :style => 'width: 309px; font-size: 17px; height: 25px; border: none; margin: 0;', :title => 'Where? e.g. Chicago, IL'
    %span.clear.hide{:style => 'display: block; position: relative; left: 322px; top: -28px; width: 25px;'}
      = image_tag("Delete.png")
  .span-2.last
    = submit_tag 'Search', :class => 'button big', :style => 'margin-left: 7px; margin-top: 7px; font-size: 1.5em;'
  .span-24.last{:style => 'padding-top: 3px;'}
    = check_box_tag '', 'locations', @search_klass ? @search_klass == 'locations' : false, :id => 'search_locations', :class => 'search_klass', :name => 'search_klass'
    = label_tag 'search_locations', 'Search Locations only'
    == &nbsp;
    = check_box_tag '', 'events', @search_klass ? @search_klass == 'events' : false, :id => 'search_events', :class => 'search_klass', :name => 'search_klass'
    = label_tag 'search_events', 'Search Events only'