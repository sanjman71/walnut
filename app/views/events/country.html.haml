- title(@title)

.span-23.mat.prepend-1.last.padding-top-10.padding-bottom-10
  %h2== Browse Events by City
  %h4#breadcrumbs
    = link_to 'Home', root_path
    
%hr.space

%h3.span-23.prepend-1
  - @cities.each_with_index do |city, i|
    - klasses = i.odd? ? ["locality", "odd",] : ["locality", "even"]
    %span.small[city]{:style => "white-space: nowrap; margin-right: 3px; font-weight: bold;"}= link_to(city, url_for(:action => 'city', :country => @country, :state => city.state, :city => city), :class => klasses.join(" "))
