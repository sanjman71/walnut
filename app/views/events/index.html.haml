- title(@title)

.span-23.mat.prepend-1.last.padding-top-10.padding-bottom-10
  %h2= @title
  %h4#breadcrumbs
    = render(:partial => 'shared/breadcrumbs', :locals => {:country => @country, :state => @state, :city => @city, :link_all => true})

%hr.space

.span-22.prepend-2
  -# show a google ad
  = google_ad(728, 90, 'image')

%hr.space

.span-5#sidebar
  #categories
    = render(:partial => 'categories', :locals => {:categories => @categories}) unless @categories.blank?

  -# show another google ad
  = google_ad(160, 600)

.span-19.last#events
  .span.18.prepend-1.padding-bottom-10
    == Showing events #{@first_item}-#{@last_item} of #{@total}
    
  - @events.each do |event|
    .prepend-1.letterbox{:class => cycle("shaded", "")}
      %h3.name.margin-bottom-5
        = event['title']
      %h4.venue.margin-bottom-5
        = event['venue_name']
      %h4.when.margin-bottom-5
        = Time.parse(event['start_time']).strftime("%a, %b %d, %I:%M %p") if event['start_time']
      %h4.url
        = link_to "Details", event['url']
