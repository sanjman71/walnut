  - unless @zips.blank?
    .state_zips== #{@state.name} Zip Codes
    - @zips.each_with_index do |zip, i|
      - klasses = i.odd? ? ["locality", "odd",] : ["locality", "even"]
      %span.small[zip]= link_to(zip, url_for(:controller => 'zips', :action => 'zip', :country => @country, :state => @state, :zip => zip), :class => klasses.join(" "))
    
