- title(@title)

.span-23.mat.prepend-1.last.padding-top-10.padding-bottom-10
  %h2= @h1
  %h5
    - @filters.each do |filter|
      %span{:style => 'margin-right: 3px;'}
        = link_to filter.titleize, url_for(:filter => filter)
  %h4#breadcrumbs
    = link_to 'Back', country_venues_path(@country)
    
    
%hr.space

.span-23.prepend-1.last#events
  .span-10
    %h4= page_entries_info @venues unless @venues.blank?
  .span-7.prepend-5.last
    = will_paginate(@venues, :page_links => true)

  = render(:partial => 'event_venues', :locals => {:venues => @venues})

  