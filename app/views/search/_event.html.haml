.mappable.unselected.span-10.last{:id => "mappable_#{index}", :lat => event.location.lat, :lng => event.location.lng, :index => index, :html => "<strong>#{event.name}</strong><br/>At #{event.event_venue.name}<br/>#{link_to "Details", event.url}"}

  .span-1
    %img{:src => "http://www.google.com/mapfiles/marker" + ('A'..'Z').to_a[index] + ".png", :class => 'icon'}

  .span-7.info
    %h4.name.margin-bottom-5{:style => 'font-weight: bold; font-size: 1.3em;'}
      = event.name
    %h4.venue.margin-bottom-5{:style => 'color: #555;'}
      = event.event_venue.name
      %span{:style => 'font-size: 0.8em; padding-left: 3px;'}= link_to "Details", event.url
  
  .span-2.date.last
    = render(:partial => 'events/calendar_date', :locals => {:date => event.start_at})
